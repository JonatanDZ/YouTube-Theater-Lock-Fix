{
    "manifest_version": 3,
    "name": "YouTube-Theater-Lock-Fix",
    "version": "1.0",
    "description": "Forces YouTube videos to always open in theater mode.",
    "permissions": [
        "scripting",
        "tabs"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "*://www.youtube.com/watch*"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}